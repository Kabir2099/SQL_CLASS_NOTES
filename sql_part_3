-- Q1 Create table
use ace_the_code;


drop table student;
create table student(
name varchar(50) not null,
roll int,
enroll_id int primary key,
marks int default 50,
age int check(age>17),


);

describe student;

insert into student ( name,roll, enroll_id, age) values("Kabir", 01,001,17), ("Karan",02, 00211,12);

select * from student;



-- 
create table enrolment(
course_name text,
course_id int,
enroll_id_course int,

foreign key (enroll_id_course) references student(enroll_id) on delete set null


);

drop table enrolment;

describe enrolment;

insert into enrolment (course_name, course_id, enroll_id_course) values("CSE",001, 003);

select * from enrolment;






alter table student add email varchar(50) unique;

select * from student;



-- change the data type

alter table student modify email varchar(40);


alter table student rename column email to email_student;


alter table student drop column email_student;

select * from student;


